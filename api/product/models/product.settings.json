{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "â‚¦",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "summary": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "collection": "category",
      "via": "products",
      "dominant": true
    },
    "tags": {
      "collection": "tag",
      "via": "products",
      "dominant": true
    }
  }
}
